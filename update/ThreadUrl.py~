import Queue
import threading

queue = Queue.Queue()

class ThreadUrl(threading.Thread):
    def __init__(self, queue):
        threading.Thread.__init__(self)
        self.queue = queue
          
    def run(self):
        while True:
            host = self.queue.get()
            
            url = urllib2.urlopen(host)
            print url.read(1024)
            
            self.queue.task_done()
